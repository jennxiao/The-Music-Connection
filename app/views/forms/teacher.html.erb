<div class="container pt-3">
  <div class="row title">
    <h1>Teacher's Form</h1>
  </div>

  <form method='POST', action='/forms/teacher_submit'>
    <div class="tab">
      <div class="form-group required">
        <label for="teacher_name_field">Teacher Name</label>
        <input id="teacher_name_field" type="text" name="question[teacher_name]" class="form-control" placeholder="ex. First Middle Last">
        <small class="form-text text-muted">Please enter your full name here!</small>
      </div>
      <div class="form-group required">
        <label for="phone_number_form">Phone Number</label>
        <input type="text" name="question[phone]" class="form-control" placeholder="ex. 000-000-0000" id="phone_number_form" maxlength="12" onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))">
        <small class="form-text text-muted">Please enter your phone number here!</small>
      </div>
      <div class="form-group email-group required">
        <label for="email_form">Email address</label>
        <input type="text" name="question[email]" class="form-control email" placeholder="ex. TMC@gmail.com" id='email_form'>
        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
    </div>
    <div class="tab">
      <h1>Add Classes Below</h1>
      <div class="form-group required">
        <div id="class-groups">
         <div class="class-group form-group class_box">
            <label style="margin: 10px">New Class</label>
            <!-- class name -->
            <div class="row class_row">
              <div class = "form-group required" style = "width: 80%">
                <label for="class_name">Class Name</label>
                <input type="text" name="question0[class_name]" class="form-control" placeholder="ex. Piano Beginner">
              </div>
            </div>
            <!-- school name -->
            <div class="row class_row">
              <div class="form-group required" style = "width: 80%">
                <label for="school_name">School</label>
                <input type="text" name="question0[school_name]" class="form-control" placeholder="ex. Berkeley elementary school">
              </div>
            </div>
            <!-- gradelevel -->
            <div class="row class_row">
              <div class="form-group dropdown-group required">
                <label for="grade">Grade Level</label>
                <div>
                    <div class="checkboxes">
                      <label for = "gradeK"> <input class = "form-control checkbox" type="checkbox" name="question0[grade][]" value="K" id="K"> K</label>
                      <label for = "grade1"> <input class = "form-control checkbox" type="checkbox" name="question0[grade][]" value="1" id="1"> 1 </label>
                      <label for = "grade2"> <input class = "form-control checkbox" type="checkbox" name="question0[grade][]" value="2" id="2"> 2 </label>
                      <label for = "grade3"> <input class = "form-control checkbox" type="checkbox" name="question0[grade][]" value="3" id="3"> 4 </label>
                      <label for = "grade4"> <input class = "form-control checkbox" type="checkbox" name="question0[grade][]" value="4" id="4"> 4 </label>
                      <label for = "grade5"> <input class = "form-control checkbox" type="checkbox" name="question0[grade][]" value="5" id="5"> 5 </label> <br>
                    </div>
                    <div class="checkboxes">
                      <label for = "grade6"> <input class = "form-control checkbox" type="checkbox" name="question0[grade][]" value="6" id="6"> 6 </label>
                      <label for = "grade7"> <input class="form-control checkbox" type="checkbox" name="question0[grade][]" value="7" id="7"> 7 </label>
                      <label for = "grade8"> <input class="form-control checkbox" type="checkbox" name="question0[grade][]" value="8" id="8"> 8 </label> <br>
                    </div>
                    <div class="checkboxes"> 
                      <label for = "grade9"><input class="form-control checkbox" type="checkbox" name="question0[grade][]" value="9" id="9"> 9 </label>
                      <label for = "grade10"><input class="form-control checkbox" type="checkbox" name="question0[grade][]" value="10" id="10"> 10 </label>
                      <label for = "grade11"><input class="form-control checkbox" type="checkbox" name="question0[grade][]" value="11" id="11"> 11 </label>
                      <label for = "grade12"><input class="form-control checkbox" type="checkbox" name="question0[grade][]" value="12" id="12"> 12 </label>
                    </div>
                </div>
              </div>
            </div>
            <!-- time group -->
            <div class="class_row form-group dropdown-group required">
              <!-- This is the element where we append -->
              <div id="time-groups0" class="time-groups">
                <label>Time Availability</label>
                <!-- This is the element where we derive the original -->
                <div class="time-group row 0" id="time_item0" name="time-item0">
                  <div class="col-md-4" id="day_of_week">
                    <select class="form-control" name="question0[weekday][]">
                      <option disabled selected value> -- Day of the Week -- </option>
                      <option value="Monday">Monday</option>
                      <option value="Tuesday">Tuesday</option>
                      <option value="Wednesday">Wednesday</option>
                      <option value="Thursday">Thursday</option>
                      <option value="Friday">Friday</option>
                      <option value="Saturday">Saturday</option>
                      <option value="Sunday">Sunday</option>
                    </select>
                  </div>
                  <div class="col-md-4" id="start_time">
                    <input class="form-control" name="question0[start_time][]" type="time" value="13:00" id="example-time-input" step="60">
                  </div>
                  <div class="col-md-4" id="end_time">
                    <input class="form-control" name="question0[end_time][]" type="time" value="15:00" id="example-time-input" step="60">
                  </div>
                </div>
              </div>
              <button type="button" class="btn btn-primary btn-sm time_button" id="add_time0">
                Add More Time Availability
              </button>
              <button type="button" class="btn btn-primary btn-sm time_button" id="rem_time0">
                Remove Time Availability
              </button>
              <small class="form-text text-muted">Select the time you are requesting.</small>
            </div>
            <!-- instruments -->
            <div class="row class_row form-group dropdown-group required instrument_row">
              <div id="instruments">
                <label>Instrument/Singing</label>
                <div class="instrument">
                  <div class="instrument_box">
                    <div class="paddedBox">
                      <label for = "Violin0"> <input class = "form-control checkbox" type="checkbox" name="question0[instrument][]" value="Violin" id="Violin0"> Violin </label> <br> 
                      <label for = "Violoa0"><input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Viola" id="Viola0"> Viola </label> <br>
                      <label for = "Cello0"><input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Cello" id="Cello0"> Cello </label> <br>
                      <label for = "Double Bass0"><input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Double Bass" id="Double Bass0"> Double Bass </label>
                    </div>
                  </div>
                  <div class="instrument_box">
                    <div class="paddedBox">
                      <label for = "Flute0"> <input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Flute" id="Flute0"> Flute </label> <br>
                      <label for = "Clarinet0"> <input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Clarinet" id="Clarinet0"> Clarinet  </label> <br>
                      <label for = "Saxophone0"> <input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Saxophone" id="Saxophone0"> Saxophone  </label><br>
                      <label for = "Oboe0"> <input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Oboe" id="Oboe0"> Oboe <br>
                      <label for = "Trumpet0"> <input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Trumpet" id="Trumpet0"> Trumpet  </label><br>
                      <label for = "French Horn0"> <input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="French Horn" id="French Horn0"> French Horn </label> <br>
                      <label for = "Trombone0"><input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Trombone" id="Trombone0"> Trombone  </label><br>
                      <label for = "Baritone0"><input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Baritone" id="Baritone0"> Baritone </label> <br>
                      <label for = "Tuba0"><input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Tuba" id="Tuba0"> Tuba <br>
                      <label for = "Percussion0"><input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Percussion" id="Percussion0"> Percussion </label>
                    </div>
                  </div>
                  <div class="instrument_box">
                    <div class="paddedBox">
                      <label for = "Piano0"><input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Piano" id="Piano0"> Piano </label><br>
                      <label for = "Guitar0"><input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Guitar" id="Guitar0"> Guitar </label><br>
                      <label for = "Ukelele0"><input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Ukelele" id="Ukelele0"> Ukelele </label><br>
                      <label for = "Voice0"><input class="form-control checkbox" type="checkbox" name="question0[instrument][]" value="Voice" id="Voice0"> Voice </label>
                    </div>
                  </div>
                </div>
                <!-- This is element to append to -->
                <div class="form-group other-instruments" id="other-instruments0">
                    <label for="other_instrument">Other:</label>
                    <!-- This is element where we derive the original -->
                    <input id="other_instrument0" type="text" name="question0[instrument][]" class="form-control other_instrument 0" placeholder="ex. Harpischord">
                </div>
                <button type="button" class="btn btn-primary btn-sm add_instrument" id="add_instrument0">
                  Add Another Instrument
                </button>
                <button type="button" class="btn btn-primary btn-sm rem_instrument" id="rem_instrument0">
                  Remove Last Instrument
                </button>
              </div>
            </div>
          </div>
        </div>
        <button type="button" class="btn btn-primary btn-sm" id="add_class">
          Add Another Class
        </button>
        <button type="button" class="btn btn-primary btn-sm" id="rem_class">
          Remove A Class
        </button>
      </div>
      <div class="form-group">
        <label for="comment">Comment</label>
        <input type="text" name="question0[comment]" class="form-control">
        <small class="form-text text-muted">Special instructions / Preference</small>
      </div>
    </div>
    <button type="button" id="prev_btn" class="btn btn-primary">Prev</button>
    <button type="button" id="next_btn" class="btn btn-primary">Next</button>
    <button type="submit" id="sub_btn" class="btn btn-primary">Submit</button>
  </form>

<%= javascript_include_tag('teacherforms.js') %>
<%= stylesheet_link_tag    'forms', media: 'all', 'data-turbolinks-track' => true %>
