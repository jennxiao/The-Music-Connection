<div class="container pt-3">
  <div class="row title">
    <p class="h2">Tutor's Form</p>
  </div>

<form id="allForm" method='POST', action='/forms/tutor_submit'>
  <div class="tab">
    <div class="form-group required">
      <label for="question[name]">Name</label>
      <input type="text" name="question[name]" class="form-control required-text" placeholder="ex. First Middle Last">
      <small class="form-text text-muted">Please enter your full name here!</small>
    </div>
    <div class="form-group required">
      <label for="question[phone]">Phone Number</label>
      <input type="text" name="question[phone]" class="form-control phone-number-input" placeholder="ex. 000-000-0000" id="phone_number_form" maxlength="12" onkeypress="return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))">
      <small class="form-text text-muted">Please enter your phone number here! Must be XXX-XXX-XXXX format.</small>
    </div>
    <div class="form-group email-group required">
      <label for="question[email]">Email address</label>
      <input type="email" name="question[email]" class="form-control email" placeholder="ex. TMC@gmail.com">
      <small class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group required">
      <label for="question[sid]">SID</label>
      <input type="text" name="question[sid]" class="form-control required-text" placeholder="ex. 3032179600">
      <small class="form-text text-muted">Please enter your SID here!</small>
    </div>
    <div class="form-group dropdown-group required">
      <label for="question[year]">Year</label>
      <select class="form-control required-text" name="question[year]">
        <option value="Freshman"> Freshman </option>
        <option value="Sophomore"> Sophomore </option>
        <option value="Junior"> Junior </option>
        <option value="Senior"> Senior </option>
        <option value="Other"> Other </option>
      </select>
      <small class="form-text text-muted">Please enter your year here!</small>
    </div>
    <div class="form-group">
      <label for="question[major]">Major</label>
      <input type="text" name="question[major]" class="form-control required-text" placeholder="ex. Music, Art History">
      <small class="form-text text-muted">Please enter your major(s) here!</small>
    </div>
    <div class="form-group">
      <label for="question[minor]">Minor</label>
      <input type="text" name="question[minor]" class="form-control" placeholder="ex. Music, Art History">
      <small class="form-text text-muted">Please enter your minor(s) here!</small>
    </div>

    <div class="form-group dropdown-group required">
      <label for="question[exp]">Experiences</label>
      <select class="form-control required-text" name="question[exp]">
        <option value="1-5 years"> 1-5 years </option>
        <option value="5-10 years"> 5-10 years </option>
        <option value="10+ years"> 10+ years </option>
      </select>
      <small class="form-text text-muted">Please enter the approximate number of years of experience with your instrument!</small>
    </div>

    <div id="time-groups" class="form-group dropdown-group required">
      <div id="all-times-holder">
        <div class="time-holder">
          <label>Time Availability</label>
          <div class="time-group row">
            <div class="col-md-4">
              <select class="form-control required-text" name="question[weekday][]">
                <option disabled selected value> -- Day of the Week -- </option>
                <option value="Monday">Monday</option>
                <option value="Tuesday">Tuesday</option>
                <option value="Wednesday">Wednesday</option>
                <option value="Thursday">Thursday</option>
                <option value="Friday">Friday</option>
                <option value="Saturday">Saturday</option>
                <option value="Sunday">Sunday</option>
              </select>
            </div>
            <div class="col-md-4" id="start_time">
              <input class="form-control" name="question[start_time][]" type="time" value="13:00" step="60">
            </div>
            <div class="col-md-4" id="end_time">
              <input class="form-control" name="question[end_time][]" type="time" value="15:00" step="60">
            </div>
          </div>
        </div>
      </div>
      <button type="button" class="btn btn-primary btn-sm" id="add_time">
        Add More Time Availability
      </button>
      <button type="button" class="btn btn-primary btn-sm" id="rem_time" style="display:none">
        Remove Time Availability
      </button>
      <small class="form-text text-muted">Select the time you are requesting.</small>
    </div>

    <!-- gradelevel -->
      <div class="form-group dropdown-group required">
        <label for="grade">Grade Level</label>
        <div>
          <div class="checkboxes">
            <label for = "gradeK"> <input class = "form-control checkbox" type="checkbox" name="question[grade][]" value="K" id="K"> K</label>
            <label for = "grade1"> <input class = "form-control checkbox" type="checkbox" name="question[grade][]" value="1" id="1"> 1 </label>
            <label for = "grade2"> <input class = "form-control checkbox" type="checkbox" name="question[grade][]" value="2" id="2"> 2 </label>
            <label for = "grade3"> <input class = "form-control checkbox" type="checkbox" name="question[grade][]" value="3" id="3"> 4 </label>
            <label for = "grade4"> <input class = "form-control checkbox" type="checkbox" name="question[grade][]" value="4" id="4"> 4 </label>
            <label for = "grade5"> <input class = "form-control checkbox" type="checkbox" name="question[grade][]" value="5" id="5"> 5 </label> <br>
          </div>
          <div class="checkboxes">
            <label for = "grade6"> <input class = "form-control checkbox" type="checkbox" name="question[grade][]" value="6" id="6"> 6 </label>
            <label for = "grade7"> <input class="form-control checkbox" type="checkbox" name="question[grade][]" value="7" id="7"> 7 </label>
            <label for = "grade8"> <input class="form-control checkbox" type="checkbox" name="question[grade][]" value="8" id="8"> 8 </label> <br>
          </div>
          <div class="checkboxes"> 
            <label for = "grade9"><input class="form-control checkbox" type="checkbox" name="question[grade][]" value="9" id="9"> 9 </label>
            <label for = "grade10"><input class="form-control checkbox" type="checkbox" name="question[grade][]" value="10" id="10"> 10 </label>
            <label for = "grade11"><input class="form-control checkbox" type="checkbox" name="question[grade][]" value="11" id="11"> 11 </label>
            <label for = "grade12"><input class="form-control checkbox" type="checkbox" name="question[grade][]" value="12" id="12"> 12 </label>
          </div>
        </div>
      <small class="form-text text-muted">What grade levels are you most comfortable with teaching?</small>
    </div>
  </div>

  <div class="tab">
    <div id="instruments-group" class="form-group dropdown-group required">
      <div id="all-instruments-holder">
        <div class="instrument-entry">
          <label>Instrument/Singing</label>
          <div class="instrument">
            <div class="instrument_box">
              <div class="paddedBox">
                <label for = "Violin0"> <input class = "form-control checkbox" type="checkbox" name="question[instrument][]" value="Violin" id="Violin0"> Violin </label> <br> 
                <label for = "Violoa0"><input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Viola" id="Viola0"> Viola </label> <br>
                <label for = "Cello0"><input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Cello" id="Cello0"> Cello </label> <br>
                <label for = "Double Bass0"><input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Double Bass" id="Double Bass0"> Double Bass </label>
              </div>
            </div>
            <div class="instrument_box">
              <div class="paddedBox">
                <label for = "Flute0"> <input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Flute" id="Flute0"> Flute </label> <br>
                <label for = "Clarinet0"> <input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Clarinet" id="Clarinet0"> Clarinet  </label> <br>
                <label for = "Saxophone0"> <input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Saxophone" id="Saxophone0"> Saxophone  </label><br>
                <label for = "Oboe0"> <input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Oboe" id="Oboe0"> Oboe <br>
                <label for = "Trumpet0"> <input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Trumpet" id="Trumpet0"> Trumpet  </label><br>
                <label for = "French Horn0"> <input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="French Horn" id="French Horn0"> French Horn </label> <br>
                <label for = "Trombone0"><input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Trombone" id="Trombone0"> Trombone  </label><br>
                <label for = "Baritone0"><input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Baritone" id="Baritone0"> Baritone </label> <br>
                <label for = "Tuba0"><input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Tuba" id="Tuba0"> Tuba <br>
                <label for = "Percussion0"><input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Percussion" id="Percussion0"> Percussion </label>
              </div>
            </div>
            <div class="instrument_box">
              <div class="paddedBox">
                <label for = "Piano0"><input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Piano" id="Piano0"> Piano </label><br>
                <label for = "Guitar0"><input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Guitar" id="Guitar0"> Guitar </label><br>
                <label for = "Ukelele0"><input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Ukelele" id="Ukelele0"> Ukelele </label><br>
                <label for = "Voice0"><input class="form-control checkbox" type="checkbox" name="question[instrument][]" value="Voice" id="Voice0"> Voice </label>
              </div>
            </div>
          </div>
          <!-- This is element to append to -->
          <div class="form-group other-instruments" id="other-instruments">
              <label for="other_instrument">Other:</label>
              <!-- This is element where we derive the original -->
              <input id="other_instrument" type="text" name="question[instrument][]" class="form-control other_instrument 0" placeholder="ex. Harpischord">
          </div>
          <button type="button" class="btn btn-primary btn-sm add_instrument" id="add_instrument">
            Add Another Instrument
          </button>
          <button type="button" class="btn btn-primary btn-sm rem_instrument" id="rem_instrument">
            Remove Last Instrument
          </button>
        </div>
      </div>
      <small class="form-text text-muted">Select the instruments you would like to have lessons for.</small>
    </div>
  </div>

  <div class="tab">
    <div class="form-group radio-group required">
      <label for="question[in_class]">In Class</label> <br>
      <input type="radio" name="question[in_class]" value="Yes" id="InClass_Yes"> Yes
      <input type="radio" name="question[in_class]" value="No" id="InClass_No"> No <br>
      <small class="form-text text-muted">Select yes if you would like to teach in class.</small>
    </div>
  </div>

  <div class="tab">
    <div class="form-group radio-group required">
      <label>Private Lessons?</label> <br>
      <input type="radio" name="question[private]" value="Yes" id="Private_Yes"> Yes
      <input type="radio" name="question[private]" value="No" id="Private_No"> No <br>
      <small class="form-text text-muted">Select Yes if you would like to teach private lessons.</small>
    </div>
  </div>

  <div class="tab">
    <div>
      <h4>Member Commitment Policy</h4>
      <h5>
        <ol>
         <li>Regular weekly tutoring (at least one hour per week)</li>
         <li>Attend general meetings</li>
         <li>Volunteer for TMC-sponsored events as needed</li>
       </ol>
      </h5>
    </div>
    <div>
      <h4>Attendance Policy</h4>
      <h5>As a music tutor it is your responsibility to attend your scheduled tutoring placement on time, every week. However, we know that unexpected sickness and emergencies happen from time to time. For these cases, you have one (1) emergency absence per placement site for sickness/unexpected circumstances.

If you do know that you have to miss tutoring for something ahead of time, you may use a planned absence. You are allowed one (1) planned absence per site. You may not use your emergency absence as a second planned absence.
</h5>
    </div>
    <div class="form-group checkbox-group required" id="mandatory-commitment-holder">
      <label>Member Commitment Policy</label><br>
      <input type="checkbox" name="question[policy]" value="1" id="Member Commitment Policy"> I have read and agree to the policy.<br>
      <small class="form-text text-muted">This is mandatory.</small>
    </div>
    <div class="form-group checkbox-group required" id="attendance-holder">
      <label>Attendance Policy</label><br>
      <input type="checkbox" name="question[policy]" value="1" id="Attendance Policy"> I have read and agree to the policy.<br>
      <small class="form-text text-muted">This is mandatory.</small>
    </div>
  </div>

  <div class="tab">
    <div class="form-group radio-group required" id="radio-returning-jump">
      <label>Returning or New</label><br>
      <input type="radio" name="question[returning]" value="Returning" id="radio-returning"> Returning <br>
      <input type="radio" name="question[returning]" value="New" id="radio-new"> New <br>
      <small class="form-text text-muted">Select Yes if you are a returning tutor.</small>
    </div>
  </div>
  <div class="tab">
    <div class="form-group radio-group required">
      <label>Prefer to work with previous student or class?</label><br>
      <input type="radio" name="question[prev_again]" value="Yes" id="Prefer_Yes"> Yes <br>
      <input type="radio" name="question[prev_again]" value="No" id="Prefer_No"> No <br>
      <small class="form-text text-muted">Select Yes if you want to be matched up with previous student or class.</small>
    </div>
    <div class="form-group">
      <label for="question[preferred_student_class]">Preferred Student/Class</label>
      <input type="text" name="question[preferred_student_class]" class="form-control">
      <small class="form-text text-muted">Please write down the name of the student or class.</small>
    </div>
  </div>
  <div class="tab">
    <div class="form-group">
      <h1>If You're a Returning Tutor, Please Ignore the Link!</h1>
      <label for="tutor_link">Survey Link: <%= @tutorLink%></label><br>
      <label for='tutor_text'><%= @tutorText%></label>
    </div>
    <div class="form-group">
      <label for="comment">Comments</label>
      <input type="text" name="question[comment]" class="form-control">
      <small class="form-text text-muted">Special instructions / Preference</small>
    </div>
  </div>
  <button type="button" id="prev_btn" class="btn btn-primary">Prev</button>
  <button type="button" id="next_btn" class="btn btn-primary">Next</button>
  <button type="submit" id="sub_btn" class="btn btn-primary">Submit</button>
</form>


